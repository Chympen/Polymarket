FROM node:20-alpine AS builder
WORKDIR /app
COPY package.json tsconfig.base.json ./
COPY shared-lib ./shared-lib
COPY openclaw-agent-service ./openclaw-agent-service
RUN npm install --workspace=shared-lib --workspace=openclaw-agent-service
RUN cd shared-lib && npx prisma generate
RUN npm run build --workspace=shared-lib
RUN npm run build --workspace=openclaw-agent-service

FROM node:20-alpine AS runner
WORKDIR /app
RUN apk add --no-cache openssl
ENV NODE_ENV=production
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/shared-lib/dist ./shared-lib/dist
COPY --from=builder /app/shared-lib/package.json ./shared-lib/package.json
COPY --from=builder /app/shared-lib/prisma ./shared-lib/prisma
COPY --from=builder /app/openclaw-agent-service/dist ./openclaw-agent-service/dist
COPY --from=builder /app/openclaw-agent-service/package.json ./openclaw-agent-service/package.json
RUN npx prisma generate --schema=./shared-lib/prisma/schema.prisma
RUN addgroup -g 1001 -S appgroup && adduser -S appuser -u 1001 -G appgroup
USER appuser
EXPOSE 3001
CMD ["node", "openclaw-agent-service/dist/index.js"]
